@model API.Locadora.Models.Locacao

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Locacao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CpfCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CpfCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filmes)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var filme in Model.Filmes)
                {
                    <li>@filme.Nome</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataLocacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataLocacao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
